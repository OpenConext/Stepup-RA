<div class="row progress-steps">
    <div class="col-xs-12 col-md-3">1. {{ 'ra.vetting.progress_bar.enter_registration_code'|trans }}</div>
    <div class="col-xs-12 col-md-3 hidden-xs text-muted">2. {{ 'ra.vetting.progress_bar.prove_possession'|trans }}</div>
    <div class="col-xs-12 col-md-3 hidden-xs text-muted">3. {{ 'ra.vetting.progress_bar.verify_identity'|trans }}</div>
    <div class="col-xs-12 col-md-3 hidden-xs text-muted">4. {{ 'ra.vetting.progress_bar.second_factor_vetted'|trans }}</div>
</div>
<div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="{{ progress ? progress : 1 }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ progress }}%">
        <span class="sr-only">{{ progress }}%</span>
    </div>
</div>
