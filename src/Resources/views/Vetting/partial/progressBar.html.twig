<div class="row progress-steps">
    <div class="col-xs-12 col-md-3">1. {{ 'ss.registration.progress_bar.select_second_factor'|trans }}</div>
    <div class="col-xs-12 col-md-3 hidden-xs text-muted">2. {{ 'ss.registration.progress_bar.link_second_factor'|trans }}</div>
    <div class="col-xs-12 col-md-3 hidden-xs text-muted">3. {{ 'ss.registration.progress_bar.confirm_second_factor'|trans }}</div>
    <div class="col-xs-12 col-md-3 hidden-xs text-muted">4. {{ 'ss.registration.progress_bar.register_second_factor'|trans }}</div>
</div>
<div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="{{ progress ? progress : 1 }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ progress }}%">
        <span class="sr-only">{{ progress }}%</span>
    </div>
</div>
